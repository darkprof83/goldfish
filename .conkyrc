# ======================================================================
# conky by darkprof
# ======================================================================
# Needs hddtemp lm_sensors

#=======================================================================
# Общие параметры для окна
#=======================================================================
# ----------------------------------------------------------------------
# Шрифт
use_xft yes
xftfont Serif:size=14
# ----------------------------------------------------------------------

# ----------------------------------------------------------------------
# Параметры отрисовки окна
update_interval 2
alignment top_right
#alignment top_left
#alignment middle_left
background no
double_buffer yes
no_buffers yes
text_buffer_size 3072
border_width 1
draw_borders no
stippled_borders 10
draw_graph_borders yes
draw_outline no
draw_shades no
out_to_console no
out_to_stderr no
extra_newline yes
own_window yes
own_window_class Conky
#own_window_type desktop
own_window_type normal
own_window_argb_visual yes
own_window_transparent yes
own_window_hints   undecorated,below,sticky,skip_taskbar,skip_pager
#own_window_type      override
#double_buffer yes
#stippled_borders 0
uppercase no
use_spacer none
show_graph_scale no
show_graph_range no
# ----------------------------------------------------------------------

# ----------------------------------------------------------------------
# Размеры
gap_x 20
gap_y 20
minimum_size 600 900
# ----------------------------------------------------------------------
# ======================================================================


# ======================================================================
# Loading lua script for drawning bars
# ======================================================================
#lua_load ~/.conky-bargraph.lua
#lua_draw_hook_pre conky_main
# ===========================================================

# ===========================================================
# цвета
# ===========================================================
color0 D4AF37
default_color FFD700
default_outline_color FFD700
default_shade_color D4AF37

# ============================================================
# Шаблоны
# ============================================================
template0 ${color0}${font Serif:size=24}\1${font}${color}
template1 ${color0}\1:${color} \2
template2 ${color0}\1:${color} \2\n\3
template3 ${color0}Ядро \1:${color} ${cpu cpu\1}%\n${cpubar cpu\1}
template4 ${color0}/dev/\1:${color} ${hddtemp /dev/\1}°C
template5 ${color0}\1:${color} ${fs_used \1} / ${fs_size \1} - ${fs_used_perc \1}%\n${fs_bar \1}
# ============================================================
# Место вывода информации
# ===========================================================
TEXT
$stippled_hr
${template0 Загрузка\ системы}
$stippled_hr
# ${template1 Система $sysname}
# ${template1 Архитектура $machine}
${template1 Ядро $kernel}
$stippled_hr
${template1 Процессор ${exec\ uname\ -p}}
${template1 Температура ${execi\ 2\ sensors|grep\ 'temp2'|cut\ -c\ 15-22}}
${template1 Обороты ${execi\ 2\ sensors|grep\ 'fan2'|cut\ -c\ 14-22}}
${template3 1}
${template3 2}
${template3 3}
${template3 4}
${template3 5}
${template3 6}
$stippled_hr
${template2 Память $mem/$memmax\ -\ $memperc% $membar}
${template2 Подкачка $swap/$swapmax\ -\ $swapperc% $swapbar}
#${template1 Процессов $processes}
#${template1 Потоков $threads}
$stippled_hr
${template4 sda} 
${template5 /}
$stippled_hr
${template4 sdb}
${template5 /home}
$stippled_hr
${template4 sdc}
${template5 /mnt/alex}
$stippled_hr
