-- ===========================================================
-- conky by darkprof
-- Needs hddtemp lm_sensors
-- ===========================================================
conky.config = {
	use_xft = true,
	font = 'Serif:size=12',

	update_interval = 2,
	alignment = 'top_right',
--alignment top_left
--alignment middle_left
	background = false,
	double_buffer = true,
	no_buffers = true,
	text_buffer_size = 3072,
	border_width = 1,
	draw_borders = false,
	stippled_borders = 10,
	draw_graph_borders = true,
	draw_outline = false,
	draw_shades = false,
	out_to_console = false,
	out_to_stderr = false,
	extra_newline = true,
	own_window = true,
	own_window_class = 'Conky',
--own_window_type desktop
	own_window_type = 'normal',
	own_window_argb_visual = true,
	own_window_transparent = true,
	own_window_hints = 'undecorated,below,sticky,skip_taskbar,skip_pager',
--own_window_type      override
--double_buffer yes
--stippled_borders 0
	uppercase = false,
	use_spacer = 'none',
	show_graph_scale = false,
	show_graph_range = false,

	gap_x = 20,
	gap_y = 20,
	minimum_width = 600, minimum_height = 900,
  
--lua_load ~/.conky-bargraph.lua
--lua_draw_hook_pre conky_main

	color0 = '#1560BD',
	default_color = '#00008B',
	default_outline_color = '#00008B',
	default_shade_color = 'black',

	template0 = [[
${color0}${font Serif:size=22:bold}\1${font}${color}]],
	template1 = [[
${color0}${font Serif:bold}\1:${font}${color} \2]],
	template2 = [[
${color0}${font Serif:bold}\1:${font}${color} \2\n\3]],
	template3 = [[
${color0}${font Serif:bold}Ядро \1:${font}${color} ${cpu cpu\1}%\n${cpubar cpu\1}]],
	template4 = [[
${color0}${font Serif:bold}/dev/\1:${font}${color} ${hddtemp /dev/\1}°C]],
	template5 = [[
${color0}${font Serif:bold}\1:${font}${color} ${fs_used \1} / ${fs_size \1} - ${fs_used_perc \1}%\n${fs_bar \1}]],
	template6 = '${hr 2}',
};

conky.text = [[
${image ~/.conky/fon.png -p 0,0 -s 600x1000}
$template6
${template0 Загрузка\ системы}
$template6
# ${template1 Система $sysname}
# ${template1 Архитектура $machine}
${template1 Ядро $kernel}
$template6
${template1 Процессор ${exec\ uname\ -p}}
${template1 Температура ${execi\ 2\ sensors|grep\ 'temp2'|cut\ -c\ 15-22}}
${template1 Обороты ${execi\ 2\ sensors|grep\ 'fan2'|cut\ -c\ 14-22}}
${template3 1}
${template3 2}
${template3 3}
${template3 4}
${template3 5}
${template3 6}
$template6
${template2 Память $mem/$memmax\ -\ $memperc% $membar}
${template2 Подкачка $swap/$swapmax\ -\ $swapperc% $swapbar}
#${template1 Процессов $processes}
#${template1 Потоков $threads}
$template6
${template4 sda} 
${template5 /}
$template6
${template4 sdb}
${template5 /home}
$template6
${template4 sdc}
${template5 /mnt/alex}
$template6
]];
