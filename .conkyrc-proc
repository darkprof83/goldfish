#=======================================================================
# Общие параметры для окна
#=======================================================================
# ----------------------------------------------------------------------
# Выводить данные в указанное место
out_to_console no
out_to_stderr no
# ----------------------------------------------------------------------
# Шрифт
use_xft yes
xftfont Serif:size=14
uppercase no
# ----------------------------------------------------------------------
# Цвета
default_color FFD700
default_outline_color FFD700
default_shade_color D4AF37
# ----------------------------------------------------------------------
# Линии
draw_borders no
border_width 1
draw_graph_borders yes
draw_outline no
draw_shades no
show_graph_scale no
show_graph_range no
stippled_borders 10
extra_newline yes
# ----------------------------------------------------------------------
# Отступы
use_spacer none
gap_x 20
gap_y 20
# ----------------------------------------------------------------------
# Буффер
double_buffer yes
# отображать использованный объем ОЗУ без учета кэша
# (кэш считается свободной памятью)
no_buffers yes
text_buffer_size 3072
# ----------------------------------------------------------------------
# Параметры отрисовки
update_interval 2
# ----------------------------------------------------------------------
# Параметры окна
background no
alignment bottom_left
minimum_size 550 430
own_window yes
own_window_class Conky-proc
own_window_type normal
own_window_argb_visual yes
own_window_transparent yes
own_window_hints   undecorated,below,sticky,skip_taskbar,skip_pager
# ----------------------------------------------------------------------
# ======================================================================


# ======================================================================
# Место вывода информации
# ======================================================================
TEXT
# ----------------------------------------------------------------------
